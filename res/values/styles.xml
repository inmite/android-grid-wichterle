<resources>

	<!-- Settings -->
	<style name="Layout.Settings">
		<item name="android:paddingLeft">@dimen/grid2</item>
		<item name="android:paddingRight">@dimen/grid2</item>
		<item name="android:paddingTop">@dimen/grid2</item>
		<item name="android:background">@color/background</item>
	</style>

	<style name="Layout.SettingsItem">
		<item name="android:paddingLeft">@dimen/grid1</item>
		<item name="android:paddingRight">@dimen/grid1</item>
		<item name="android:paddingTop">@dimen/grid2</item>
		<item name="android:paddingBottom">@dimen/grid2</item>
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="Layout.SettingsHeader">
		<item name="android:paddingLeft">@dimen/grid5</item>
		<item name="android:paddingRight">@dimen/grid5</item>
		<item name="android:paddingTop">@dimen/grid4</item>
		<item name="android:paddingBottom">@dimen/grid4</item>
	</style>

	<style name="Layout.DialogColor">
		<item name="android:paddingLeft">@dimen/grid2</item>
		<item name="android:paddingRight">@dimen/grid2</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

	<style name="Layout.OtherColors">
		<item name="android:layout_marginBottom">@dimen/grid2</item>
		<item name="android:layout_marginTop">@dimen/grid2</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

	<style name="TextChooseColor">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="TextView.AppSettingsTitle">
		<item name="android:textSize">@dimen/title_font_size</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
		<item name="android:drawablePadding">@dimen/grid1</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="TextView.AppSettingsDesc">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/gray</item>
	</style>

	<style name="TextView.ColorTransparencyHeader">
		<item name="android:textSize">@dimen/desc_font_size</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:layout_marginTop">@dimen/grid2</item>
	</style>

	<style name="TextView.SettingHeader">
		<item name="android:textSize">14sp</item>
		<item name="android:layout_marginBottom">@dimen/grid0</item>
		<item name="android:layout_marginLeft">@dimen/grid1</item>
		<item name="android:textColor">@color/settings_header</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextView.SettingTitle">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="TextView.SettingDesc">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/gray</item>
	</style>

	<style name="TextView.SettingTitle.Row">
		<item name="android:paddingLeft">@dimen/grid1</item>
		<item name="android:paddingRight">@dimen/grid1</item>
		<item name="android:paddingTop">@dimen/grid2</item>
		<item name="android:paddingBottom">@dimen/grid2</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="CheckedTextView">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_marginBottom">@dimen/grid2</item>
		<item name="android:layout_marginTop">@dimen/grid2</item>
		<item name="android:paddingLeft">@dimen/grid1</item>
		<item name="android:paddingRight">@dimen/grid1</item>
		<item name="android:checkMark">?android:attr/listChoiceIndicatorMultiple</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="TurquoiseLine">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">2dp</item>
		<item name="android:background">@color/turquoise</item>
	</style>

	<style name="GrayLine">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1px</item>
		<item name="android:background">@color/gray_line</item>
	</style>

	<style name="GrayLine.Header">
		<item name="android:layout_height">2dp</item>
	</style>

	<!-- Notification -->
    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent.Title">
    </style>

    <style name="NotificationTextDesc" parent="android:TextAppearance.StatusBar.EventContent">
    </style>


</resources>
